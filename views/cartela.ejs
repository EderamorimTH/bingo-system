<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cartelas de Bingo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  <style>
    .cartela-grid {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      gap: 5px;
      max-width: 400px;
      margin: 0 auto;
    }
    .cartela-cell {
      background-color: #e5e7eb;
      padding: 10px;
      text-align: center;
      border-radius: 5px;
      font-weight: bold;
    }
    .cartela-cell.free {
      background-color: #10b981;
      color: white;
    }
    .cartela-cell.marked {
      background-color: #3b82f6;
      color: white;
    }
    .cartela-header {
      background-color: #1f2937;
      color: white;
      padding: 10px;
      text-align: center;
      font-weight: bold;
    }
    .cartela-container {
      margin-bottom: 2rem;
      padding: 1rem;
      border: 1px solid #e5e7eb;
      border-radius: 8px;
    }
  </style>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-3xl font-bold text-center mb-6 text-blue-600">Cartelas de Bingo</h1>
    <p class="text-center mb-4 text-2xl font-bold text-green-600" id="playerName"><%= playerName %></p>
    <div id="startMessage" class="text-xl font-semibold text-center mb-4 animate-pulse <%= game.drawnNumbers.length === 0 ? '' : 'hidden' %>">
      <%= game.startMessage || 'Em Breve o Bingo Irá Começar' %>
    </div>
    <div class="mb-4">
      <h2 class="text-lg font-semibold text-center">Prêmio Atual</h2>
      <p id="currentPrize" class="text-lg text-center"><%= game.currentPrize || '--' %></p>
    </div>
    <% cartelas.forEach((cartela, index) => { %>
      <div class="cartela-container">
        <h3 class="text-lg font-semibold text-center mb-2">Cartela <%= index + 1 %> (ID: <%= cartela.cartelaId %>)</h3>
        <div id="winnerMessage-<%= cartela.cartelaId %>" class="hidden text-center text-green-600 font-bold mb-4"></div>
        <div class="cartela-grid">
          <div class="cartela-header">B</div>
          <div class="cartela-header">I</div>
          <div class="cartela-header">N</div>
          <div class="cartela-header">G</div>
          <div class="cartela-header">O</div>
          <% for (let row = 0; row < 5; row++) { %>
            <% for (let col = 0; col < 5; col++) { %>
              <div class="cartela-cell <%= cartela.numbers[col][row] === 0 ? 'free' : '' %> <%= cartela.markedNumbers.includes(cartela.numbers[col][row]) ? 'marked' : '' %>" data-row="<%= row %>" data-col="<%= col %>" data-cartela-id="<%= cartela.cartelaId %>">
                <%= cartela.numbers[col][row] === 0 ? 'Free' : cartela.numbers[col][row] %>
              </div>
            <% } %>
          <% } %>
        </div>
      </div>
    <% }) %>
  </div>
  <script>
    const playerName = '<%= playerName %>';
    const cartelaIds = [<% cartelas.forEach((cartela, index) => { %>'<%= cartela.cartelaId %>'<%= index < cartelas.length - 1 ? ',' : '' %><% }) %>];
    const ws = new WebSocket('wss://' + window.location.host);
    ws.onmessage = (event) => {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        updateCartelas(data.game, data.winners);
      }
    };

    function updateCartelas(game, winners) {
      cartelaIds.forEach(cartelaId => {
        const cells = document.querySelectorAll(`.cartela-cell[data-cartela-id="${cartelaId}"]`);
        cells.forEach(cell => {
          const row = parseInt(cell.dataset.row);
          const col = parseInt(cell.dataset.col);
          const num = parseInt(cell.textContent) || 0;
          if (num !== 0 && game.drawnNumbers.includes(num)) {
            cell.classList.add('marked');
          }
        });
        if (winners && winners.includes(cartelaId)) {
          const winnerMessage = document.getElementById(`winnerMessage-${cartelaId}`);
          winnerMessage.classList.remove('hidden');
          winnerMessage.textContent = 'Parabéns! Esta cartela venceu!';
        }
      });
      document.getElementById('startMessage').classList.toggle('hidden', game.drawnNumbers.length > 0);
      document.getElementById('startMessage').textContent = game.startMessage || 'Em Breve o Bingo Irá Começar';
      document.getElementById('currentPrize').textContent = game.currentPrize || '--';
    }

    // Carregar estado inicial
    fetch('/game').then(res => res.json()).then(game => {
      updateCartelas(game, []);
    });
  </script>
</body>
</html>
