<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel de Administração</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Painel de Administração</h1>

    <div class="section">
      <h2>Gerar Cartela</h2>
      <form action="/generate-cartela" method="POST">
        <div class="form-group">
          <label for="playerName">Nome do Jogador</label>
          <input type="text" id="playerName" name="playerName" required>
        </div>
        <div class="form-group">
          <label for="phoneNumber">Número de Telefone (opcional)</label>
          <input type="text" id="phoneNumber" name="phoneNumber">
        </div>
        <div class="form-group">
          <label for="quantity">Quantidade de Cartelas</label>
          <input type="number" id="quantity" name="quantity" min="1" value="1">
        </div>
        <button type="submit">Gerar Cartela(s)</button>
      </form>
    </div>

    <div class="section">
      <h2>Atualizar Prêmio Atual</h2>
      <form action="/update-prize" method="POST">
        <div class="form-group">
          <label for="currentPrize">Prêmio Atual</label>
          <input type="text" id="currentPrize" name="currentPrize" value="<%= game.currentPrize %>">
        </div>
        <button type="submit">Atualizar Prêmio</button>
      </form>
    </div>

    <div class="section">
      <h2>Atualizar Informações Adicionais</h2>
      <form action="/update-info" method="POST">
        <div class="form-group">
          <label for="additionalInfo">Informações Adicionais</label>
          <textarea id="additionalInfo" name="additionalInfo"><%= game.additionalInfo %></textarea>
        </div>
        <button type="submit">Atualizar Informações</button>
      </form>
    </div>

    <div class="section">
      <h2>Atualizar Mensagem Inicial</h2>
      <form action="/update-start-message" method="POST">
        <div class="form-group">
          <label for="startMessage">Mensagem Inicial</label>
          <input type="text" id="startMessage" name="startMessage" value="<%= game.startMessage %>">
        </div>
        <button type="submit">Atualizar Mensagem</button>
      </form>
    </div>

    <div class="section">
      <h2>Números Sorteados</h2>
      <div id="drawnNumbers">
        <p>B (1-15): <%= game.drawnNumbers.filter(n => n >= 1 && n <= 15).join(', ') || '--' %></p>
        <p>I (16-30): <%= game.drawnNumbers.filter(n => n >= 16 && n <= 30).join(', ') || '--' %></p>
        <p>N (31-45): <%= game.drawnNumbers.filter(n => n >= 31 && n <= 45).join(', ') || '--' %></p>
        <p>G (46-60): <%= game.drawnNumbers.filter(n => n >= 46 && n <= 60).join(', ') || '--' %></p>
        <p>O (61-75): <%= game.drawnNumbers.filter(n => n >= 61 && n <= 75).join(', ') || '--' %></p>
      </div>
      <div class="actions">
        <form action="/draw" method="POST">
          <button type="submit">Sortear Número (Automático)</button>
        </form>
        <form action="/mark-number" method="POST">
          <div class="form-group">
            <label for="number">Marcar Número Manual (1-75)</label>
            <input type="number" id="number" name="number" min="1" max="75" required>
          </div>
          <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button type="submit">Marcar Número (Manual)</button>
        </form>
      </div>
    </div>

    <div class="section">
      <h2>Ações</h2>
      <button onclick="showModal('resetModal')">Reiniciar o Bingo</button>
      <button onclick="showModal('deleteAllModal')">Excluir Todas as Cartelas</button>
      <button onclick="showModal('deleteByPhoneModal')">Excluir por Número de Telefone</button>
    </div>

    <div id="resetModal" class="modal">
      <div class="modal-content">
        <h2>Confirmar Reinicialização do Bingo</h2>
        <form action="/reset" method="POST">
          <div class="form-group">
            <label for="resetPassword">Senha</label>
            <input type="password" id="resetPassword" name="password" required>
          </div>
          <div class="modal-actions">
            <button type="button" onclick="hideModal('resetModal')">Cancelar</button>
            <button type="submit">Reiniciar</button>
          </div>
        </form>
      </div>
    </div>

    <div id="deleteAllModal" class="modal">
      <div class="modal-content">
        <h2>Confirmar Exclusão de Todas as Cartelas</h2>
        <form action="/delete-all" method="POST">
          <div class="form-group">
            <label for="deleteAllPassword">Senha</label>
            <input type="password" id="deleteAllPassword" name="password" required>
          </div>
          <div class="modal-actions">
            <button type="button" onclick="hideModal('deleteAllModal')">Cancelar</button>
            <button type="submit">Excluir</button>
          </div>
        </form>
      </div>
    </div>

    <div id="deleteByPhoneModal" class="modal">
      <div class="modal-content">
        <h2>Excluir Cartelas por Número de Telefone</h2>
        <form action="/delete-by-phone" method="POST">
          <div class="form-group">
            <label for="phoneNumberDelete">Número de Telefone</label>
            <input type="text" id="phoneNumberDelete" name="phoneNumber" required>
          </div>
          <div class="form-group">
            <label for="deleteByPhonePassword">Senha</label>
            <input type="password" id="deleteByPhonePassword" name="password" required>
          </div>
          <div class="modal-actions">
            <button type="button" onclick="hideModal('deleteByPhoneModal')">Cancelar</button>
            <button type="submit">Excluir</button>
          </div>
        </form>
      </div>
    </div>

    <div class="section">
      <h2>Jogadores e Links</h2>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Cartelas</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody id="playersTable">
          <% players.forEach(player => { %>
            <tr>
              <td><%= player.playerName %></td>
              <td><%= player.phoneNumber || '-' %></td>
              <td><%= player.cartelaCount || 0 %></td>
              <td><a href="<%= player.link %>" target="_blank">Ver Cartelas</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="section">
      <h2>Vencedores</h2>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Cartela ID</th>
            <th>Data</th>
          </tr>
        </thead>
        <tbody id="winnersTable">
          <% if (winners.length > 0) { %>
            <tr>
              <td><%= winners[0].playerName %></td>
              <td><%= winners[0].cartelaId %></td>
              <td><%= new Date(winners[0].createdAt).toLocaleString() %></td>
            </tr>
          <% } else { %>
            <tr>
              <td colspan="3">Nenhum vencedor</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function showModal(modalId) {
      document.getElementById(modalId).style.display = 'block';
    }

    function hideModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }
  </script>
</body>
</html>
