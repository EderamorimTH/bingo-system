<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel de Administração</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body { background: #f1f5f9; font-family: Arial, sans-serif; }
    .highlight-box { background: white; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.1); padding: 1.5rem; margin-bottom: 1.5rem; }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-4xl p-6">
    <h1 class="text-3xl font-bold text-center mb-6">Painel de Administração</h1>

    <!-- Prêmio Atual -->
    <div class="highlight-box">
      <h2 class="text-xl font-semibold mb-2">Definir Prêmio Atual</h2>
      <form id="prizeForm">
        <input id="prizeInput" type="text" name="currentPrize" placeholder="Digite o prêmio atual" class="border p-2 rounded w-full" />
        <button class="mt-3 bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded" type="submit">Salvar Prêmio</button>
      </form>
    </div>

    <!-- Botão para Exportar Cartelas -->
    <div class="highlight-box text-center">
      <h2 class="text-xl font-semibold mb-4">Exportar IDs e Números das Cartelas</h2>
      <a href="/export-cartelas" class="bg-blue-600 hover:bg-blue-700 text-white py-2 px-6 rounded shadow">Baixar CSV</a>
    </div>

    <!-- Atribuir Cartelas -->
    <div class="highlight-box">
      <h2 class="text-xl font-semibold mb-2">Atribuir Cartelas a Jogador</h2>
      <form id="assignForm">
        <input name="playerName" placeholder="Nome do jogador" class="border p-2 rounded w-full mb-2" required />
        <input name="phoneNumber" placeholder="Telefone (opcional)" class="border p-2 rounded w-full mb-2" />
        <input name="cartelaNumbers" placeholder="Números das cartelas (ex: 1,2,3)" class="border p-2 rounded w-full mb-2" required />
        <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded" type="submit">Atribuir Cartelas</button>
      </form>
      <div id="assignMessage" class="text-sm mt-2"></div>
    </div>

    <!-- Lista de Vencedores -->
    <div class="highlight-box">
      <h2 class="text-xl font-semibold mb-2">Vencedores</h2>
      <table class="w-full border-collapse">
        <thead>
          <tr class="bg-gray-200">
            <th class="border p-2">Nome</th>
            <th class="border p-2">Telefone</th>
            <th class="border p-2">Cartela</th>
            <th class="border p-2">Prêmio</th>
          </tr>
        </thead>
        <tbody id="winnersTable"></tbody>
      </table>
    </div>
  </div>

  <script>
    const assignForm = document.getElementById('assignForm');
    const assignMessage = document.getElementById('assignMessage');

    assignForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      assignMessage.textContent = 'Processando...';
      const formData = new FormData(assignForm);
      const body = Object.fromEntries(formData.entries());

      const res = await fetch('/assign-cartelas', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body)
      });

      const data = await res.json();
      if (data.success) {
        assignMessage.textContent = `Cartelas atribuídas com sucesso: ${data.assigned.join(', ')}`;
        assignMessage.className = 'text-green-600';
      } else {
        assignMessage.textContent = data.error || 'Erro ao atribuir cartelas';
        assignMessage.className = 'text-red-600';
      }
    });

    // Atualizar lista de vencedores
    async function fetchWinners() {
      const res = await fetch('/winners');
      const winners = await res.json();
      const table = document.getElementById('winnersTable');
      table.innerHTML = '';
      winners.forEach(w => {
        const tel = w.phoneNumber ? w.phoneNumber.replace(/(\d{2})(\d{5})(\d{4})/, "($1) $2-****") : '--';
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td class="border p-2">${w.playerName}</td>
          <td class="border p-2">${tel}</td>
          <td class="border p-2">${w.cartelaId}</td>
          <td class="border p-2">${w.prize || '--'}</td>
        `;
        table.appendChild(tr);
      });
    }

    fetchWinners();

    // Atualizar prêmio atual
    const prizeForm = document.getElementById('prizeForm');
    prizeForm.addEventListener('submit', async e => {
      e.preventDefault();
      const prize = document.getElementById('prizeInput').value;
      await fetch('/set-prize', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ currentPrize: prize })
      });
    });
  </script>
</body>
</html>
