<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Painel Admin - Bingo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="max-w-6xl mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Painel do Administrador</h1>

    <!-- Último Número -->
    <div class="bg-white shadow rounded p-4 mb-4">
      <h2 class="text-xl font-semibold">Último Número Sorteado</h2>
      <p class="text-2xl text-red-600"><%= game.lastNumber ? game.lastNumber : '--' %></p>
    </div>

    <!-- Prêmio -->
    <div class="bg-white shadow rounded p-4 mb-4">
      <h2 class="text-xl font-semibold">Prêmio Atual</h2>
      <p class="text-lg"><%= game.currentPrize || '--' %></p>
    </div>

    <!-- Jogadores -->
    <div class="bg-white shadow rounded p-4 mb-4">
      <h2 class="text-xl font-semibold">Jogadores</h2>
      <ul class="list-disc pl-5">
        <% players.forEach(p => { %>
          <li><strong><%= p.playerName %></strong> - <%= p.phoneNumber %></li>
        <% }) %>
      </ul>
    </div>

    <!-- Vencedores -->
    <div class="bg-white shadow rounded p-4 mb-4">
      <h2 class="text-xl font-semibold mb-2">Vencedores</h2>
      <table class="w-full border">
        <thead>
          <tr class="bg-gray-200">
            <th class="border p-2">Nome</th>
            <th class="border p-2">Telefone</th>
            <th class="border p-2">Cartela</th>
            <th class="border p-2">Prêmio</th>
          </tr>
        </thead>
        <tbody>
          <% if (winners.length === 0) { %>
            <tr><td colspan="4" class="text-center p-2">Nenhum vencedor ainda</td></tr>
          <% } else { %>
            <% winners.forEach(w => { %>
              <tr>
                <td class="border p-2"><%= w.playerName %></td>
                <td class="border p-2"><%= w.phoneNumber %></td>
                <td class="border p-2"><%= w.cartelaId %></td>
                <td class="border p-2"><%= w.prize %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
