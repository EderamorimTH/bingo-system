<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Painel de Administração</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Painel de Administração</h1>

    <div class="section">
      <h2>Links Fixos</h2>
      <a href="/display">Exibição Pública</a>
      <a href="/sorteador">Sorteador Público</a>
      <a href="/cartelas-fixas">Todas as 500 Cartelas</a>
    </div>

    <div class="section">
      <h2>Atribuir Cartelas</h2>
      <form action="/assign-cartelas" method="POST">
        <div class="form-group">
          <label for="cartelaNumbers">Números das Cartelas (separados por vírgula)</label>
          <input type="text" id="cartelaNumbers" name="cartelaNumbers" required>
        </div>
        <div class="form-group">
          <label for="playerName">Nome do Jogador</label>
          <input type="text" id="playerName" name="playerName" required>
        </div>
        <div class="form-group">
          <label for="phoneNumber">Número de Telefone</label>
          <input type="text" id="phoneNumber" name="phoneNumber">
        </div>
        <button type="submit">Atribuir</button>
      </form>
    </div>

    <div class="section">
      <h2>Último Número Sorteado</h2>
      <p><%= game.lastNumber || '--' %></p>
    </div>

    <div class="section">
      <h2>Números Sorteados</h2>
      <div id="drawnNumbers">
        <p>B (1-15): <%= game.drawnNumbers.filter(n => n >= 1 && n <= 15).join(', ') || '--' %></p>
        <p>I (16-30): <%= game.drawnNumbers.filter(n => n >= 16 && n <= 30).join(', ') || '--' %></p>
        <p>N (31-45): <%= game.drawnNumbers.filter(n => n >= 31 && n <= 45).join(', ') || '--' %></p>
        <p>G (46-60): <%= game.drawnNumbers.filter(n => n >= 46 && n <= 60).join(', ') || '--' %></p>
        <p>O (61-75): <%= game.drawnNumbers.filter(n => n >= 61 && n <= 75).join(', ') || '--' %></p>
      </div>
      <form action="/draw" method="POST">
        <button type="submit">Sortear Número (Automático)</button>
      </form>
      <form action="/mark-number" method="POST">
        <input type="number" name="number" min="1" max="75" required>
        <button type="submit">Marcar</button>
      </form>
    </div>

    <div class="section">
      <h2>Ações</h2>
      <button onclick="showModal('resetModal')">Reiniciar o Bingo</button>
      <button onclick="showModal('deleteAllModal')">Excluir Todas as Cartelas</button>
      <button onclick="showModal('deleteByPhoneModal')">Excluir por Telefone</button>
    </div>

    <div id="resetModal" class="modal">
      <div class="modal-content">
        <h2>Confirmar Reinicialização do Bingo</h2>
        <form action="/reset" method="POST">
          <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button type="button" onclick="hideModal('resetModal')">Cancelar</button>
          <button type="submit">Reiniciar</button>
        </form>
      </div>
    </div>

    <div id="deleteAllModal" class="modal">
      <div class="modal-content">
        <h2>Confirmar Exclusão de Todas as Cartelas</h2>
        <form action="/delete-all" method="POST">
          <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button type="button" onclick="hideModal('deleteAllModal')">Cancelar</button>
          <button type="submit">Excluir</button>
        </form>
      </div>
    </div>

    <div id="deleteByPhoneModal" class="modal">
      <div class="modal-content">
        <h2>Excluir por Telefone</h2>
        <form action="/delete-by-phone" method="POST">
          <div class="form-group">
            <label for="phoneNumber">Número de Telefone</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required>
          </div>
          <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" required>
          </div>
          <button type="button" onclick="hideModal('deleteByPhoneModal')">Cancelar</button>
          <button type="submit">Excluir</button>
        </form>
      </div>
    </div>

    <div class="section">
      <h2>Vencedores</h2>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Cartela</th>
            <th>Link</th>
          </tr>
        </thead>
        <tbody>
          <% winners.forEach(winner => { %>
            <tr>
              <td><%= winner.playerName %></td>
              <td><%= winner.phoneNumber || '-' %></td>
              <td><%= winner.cartelaId %></td>
              <td><a href="<%= winner.link %>" target="_blank">Ver</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    function showModal(modalId) {
      document.getElementById(modalId).style.display = 'block';
    }

    function hideModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }
  </script>
</body>
</html>
