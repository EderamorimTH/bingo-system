<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Painel do Administrador</title>
  <script src="/socket.io/socket.io.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white p-6">

  <h1 class="text-3xl font-bold mb-6">Painel do Administrador</h1>

  <!-- Último número sorteado -->
  <div class="mb-6">
    <h2 class="text-xl font-semibold">Último Número Sorteado:</h2>
    <p class="text-2xl"><%= game.lastNumber || "--" %></p>
  </div>

  <!-- Prêmio Atual -->
  <div class="mb-6">
    <h2 class="text-xl font-semibold">Prêmio Atual</h2>
    <form action="/update-prize" method="POST" class="flex gap-2">
      <input type="text" name="currentPrize" value="<%= game.currentPrize || '' %>" class="text-black px-2 py-1 rounded">
      <button type="submit" class="bg-blue-600 px-4 py-1 rounded">Salvar</button>
    </form>
  </div>

  <!-- Jogadores -->
  <div class="mb-6">
    <h2 class="text-xl font-semibold">Jogadores</h2>
    <table class="w-full text-sm border border-gray-600">
      <thead class="bg-gray-700">
        <tr>
          <th class="px-2 py-1">Nome</th>
          <th class="px-2 py-1">Telefone</th>
          <th class="px-2 py-1">Cartelas</th>
          <th class="px-2 py-1">Link</th>
          <th class="px-2 py-1">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% if (jogadores && jogadores.length > 0) { %>
          <% jogadores.forEach(j => { %>
            <tr class="border-t border-gray-600">
              <td class="px-2 py-1"><%= j.nome %></td>
              <td class="px-2 py-1"><%= j.telefone %></td>
              <td class="px-2 py-1"><%= j.cartelas.join(", ") %></td>
              <td class="px-2 py-1">
                <a href="<%= j.link %>" target="_blank" class="text-blue-400 underline">Abrir</a>
              </td>
              <td class="px-2 py-1">
                <form action="/assign-cartelas" method="POST" class="flex gap-1">
                  <input type="hidden" name="playerName" value="<%= j.nome %>">
                  <input type="hidden" name="phoneNumber" value="<%= j.telefone %>">
                  <input type="text" name="cartelaNumbers" placeholder="Nºs" class="text-black px-1 py-0.5 rounded w-24">
                  <button type="submit" class="bg-green-600 px-2 py-0.5 rounded">Adicionar</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center py-2">Nenhum jogador cadastrado</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Vencedores -->
  <div class="mb-6">
    <h2 class="text-xl font-semibold">Vencedores</h2>
    <ul class="list-disc ml-6">
      <% if (winners && winners.length > 0) { %>
        <% winners.forEach(w => { %>
          <li>
            <strong><%= w.playerName %></strong> - Cartela: <%= w.cartelaId %> - Prêmio: <%= w.prize %>
          </li>
        <% }) %>
      <% } else { %>
        <li>Nenhum vencedor registrado</li>
      <% } %>
    </ul>
  </div>

  <!-- Reset do jogo -->
  <div>
    <h2 class="text-xl font-semibold">Resetar Jogo</h2>
    <form action="/reset" method="POST" class="flex gap-2">
      <input type="password" name="password" placeholder="Senha" class="text-black px-2 py-1 rounded">
      <button type="submit" class="bg-red-600 px-4 py-1 rounded">Resetar</button>
    </form>
  </div>

</body>
</html>
