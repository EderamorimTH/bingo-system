<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sorteador - Bingo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body { background: linear-gradient(135deg, #34d399, #3b82f6); font-family: Arial, sans-serif; }
    .highlight-box { background: rgba(255,255,255,0.9); border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.2); padding: 1.5rem; margin-bottom: 1.5rem; }
    .pulse { animation: pulse 2s infinite; }
    @keyframes pulse { 0%{transform:scale(1)} 50%{transform:scale(1.05)} 100%{transform:scale(1)} }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen text-gray-800">
  <div class="w-full max-w-4xl p-6">

    <!-- √öltimo N√∫mero Sorteado -->
    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">√öltimo N√∫mero Sorteado</h2>
      <p id="lastNumber" class="text-6xl font-bold text-center text-red-600"><%= game.lastNumberDisplay %></p>
    </div>

    <!-- √öltimos 5 N√∫meros -->
    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">√öltimos 5 N√∫meros Sorteados</h2>
      <p id="drawnNumbers" class="text-xl text-center text-gray-800">
        <% if (game.drawnNumbers && game.drawnNumbers.length > 0) { %>
          <%= game.drawnNumbers.slice(-5).reverse().map(n => {
            if (n >= 1 && n <= 15) return `B-${n}`;
            if (n >= 16 && n <= 30) return `I-${n}`;
            if (n >= 31 && n <= 45) return `N-${n}`;
            if (n >= 46 && n <= 60) return `G-${n}`;
            if (n >= 61 && n <= 75) return `O-${n}`;
            return n;
          }).join(", ") %>
        <% } else { %>
          --
        <% } %>
      </p>
    </div>

    <!-- Pr√™mio Atual -->
    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">Pr√™mio Atual</h2>
      <p id="currentPrize" class="text-2xl text-center text-gray-900"><%= game.currentPrize %></p>
    </div>

    <!-- Vencedores -->
    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">üèÜ Vencedores</h2>
      <table class="w-full text-center border-collapse mt-4">
        <thead>
          <tr class="bg-green-500 text-white">
            <th class="px-4 py-2">Nome</th>
            <th class="px-4 py-2">Telefone</th>
            <th class="px-4 py-2">Cartela</th>
            <th class="px-4 py-2">Pr√™mio</th>
          </tr>
        </thead>
        <tbody id="winnersTable">
          <% if (winners && winners.length > 0) { %>
            <% winners.forEach(w => { %>
              <tr class="border-b">
                <td class="px-4 py-2"><%= w.playerName %></td>
                <td class="px-4 py-2"><%= w.phoneNumber ? w.phoneNumber.replace(/(\d{2})(\d{5})(\d{4})/, "($1) *****-$3") : '' %></td>
                <td class="px-4 py-2"><%= w.cartelaId %></td>
                <td class="px-4 py-2"><%= w.prize %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="px-4 py-2 text-gray-600">Nenhum vencedor at√© agora</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>

  <script>
    const ws = new WebSocket('wss://' + window.location.host);

    ws.onmessage = event => {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        updateUI(data.game);
        updateWinners(data.winners || []);
      }
    };

    function updateUI(game) {
      document.getElementById('lastNumber').textContent = game.lastNumberDisplay || '--';
      const lastFive = game.drawnNumbers.slice(-5).reverse();
      document.getElementById('drawnNumbers').textContent = lastFive.length ? lastFive.map(n => getLetterNumber(n)).join(', ') : '--';
      document.getElementById('currentPrize').textContent = game.currentPrize && game.currentPrize.trim() ? game.currentPrize : '--';
    }

    function updateWinners(winners) {
      const tbody = document.getElementById('winnersTable');
      tbody.innerHTML = '';
      if (winners.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4" class="px-4 py-2 text-gray-600">Nenhum vencedor at√© agora</td></tr>';
        return;
      }
      winners.forEach(w => {
        const maskedPhone = w.phoneNumber ? w.phoneNumber.replace(/(\d{2})(\d{5})(\d{4})/, "($1) *****-$3") : '';
        const row = `
          <tr class="border-b">
            <td class="px-4 py-2">${w.playerName}</td>
            <td class="px-4 py-2">${maskedPhone}</td>
            <td class="px-4 py-2">${w.cartelaId}</td>
            <td class="px-4 py-2">${w.prize}</td>
          </tr>
        `;
        tbody.insertAdjacentHTML('beforeend', row);
      });
    }

    function getLetterNumber(number) {
      if (number >= 1 && number <= 15) return `B-${number}`;
      if (number >= 16 && number <= 30) return `I-${number}`;
      if (number >= 31 && number <= 45) return `N-${number}`;
      if (number >= 46 && number <= 60) return `G-${number}`;
      if (number >= 61 && number <= 75) return `O-${number}`;
      return number;
    }
  </script>
</body>
</html>
