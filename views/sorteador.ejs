<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Sorteador</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Sorteador</h1>

    <!-- N√∫meros sorteados -->
    <div class="numbers">
      <h2>N√∫meros sorteados:</h2>
      <div id="drawnNumbers">
        <% if (game.drawnNumbers && game.drawnNumbers.length > 0) { %>
          <% game.drawnNumbers.forEach(n => { %>
            <span class="number"><%= n %></span>
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- √öltimo n√∫mero -->
    <div class="last-number">
      <h2>√öltimo n√∫mero:</h2>
      <span id="lastNumber"><%= game.lastNumber ? `${game.lastNumber}` : '--' %></span>
    </div>

    <!-- Marcador manual -->
    <div class="manual">
      <h2>Marcar n√∫mero manualmente:</h2>
      <form id="markForm">
        <input type="number" id="markInput" name="number" min="1" max="75" required>
        <button type="submit">Marcar</button>
      </form>
    </div>

    <!-- Vencedores fixos -->
    <div class="winners-box">
      <h2>üèÜ Vencedores</h2>
      <table>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Cartela</th>
            <th>Pr√™mio</th>
          </tr>
        </thead>
        <tbody id="winnersTable">
          <% if (winners && winners.length > 0) { %>
            <% winners.forEach(w => { %>
              <tr>
                <td><%= w.playerName %></td>
                <td><%= (w.phoneNumber||'').replace(/(\d{2})(\d{5})(\d{4})/, "($1) *****-$3") %></td>
                <td><%= w.cartelaId %></td>
                <td><%= w.prize %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr><td colspan="4">Nenhum vencedor at√© agora</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    // WebSocket para atualizar em tempo real
    const ws = new WebSocket((location.protocol === 'https:' ? 'wss://' : 'ws://') + location.host);
    ws.onmessage = event => {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        updateUI(data.game);
        updateWinners(data.winners || []);
      }
    };

    function updateUI(game) {
      const drawnDiv = document.getElementById('drawnNumbers');
      drawnDiv.innerHTML = '';
      (game.drawnNumbers || []).forEach(n => {
        drawnDiv.insertAdjacentHTML('beforeend', `<span class="number">${n}</span>`);
      });
      document.getElementById('lastNumber').textContent = game.lastNumber || '--';
    }

    function updateWinners(winners) {
      const tbody = document.getElementById('winnersTable');
      tbody.innerHTML = '';
      if (winners.length === 0) {
        tbody.innerHTML = '<tr><td colspan="4">Nenhum vencedor at√© agora</td></tr>';
        return;
      }
      winners.forEach(w => {
        const masked = (w.phoneNumber||'').replace(/(\d{2})(\d{5})(\d{4})/, "($1) *****-$3");
        tbody.insertAdjacentHTML('beforeend',
          `<tr><td>${w.playerName}</td><td>${masked}</td><td>${w.cartelaId}</td><td>${w.prize}</td></tr>`
        );
      });
    }

    // Form manual
    document.getElementById('markForm').addEventListener('submit', async e => {
      e.preventDefault();
      const number = document.getElementById('markInput').value;
      const res = await fetch('/mark-number', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ number })
      });
      const result = await res.json();
      if (result.error) alert(result.error);
    });
  </script>
</body>
</html>
