<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cartelas do Bingo</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body { background: linear-gradient(135deg, #34d399, #3b82f6); font-family: Arial, sans-serif; }
    .cartela-container { background: white; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.2); padding: 1.5rem; margin-bottom: 2rem; }
    .cartela-table { border-collapse: separate; border-spacing: 0; width: 100%; }
    .cartela-table th { background: #10b981; color: white; padding: 0.75rem; font-size: 1.25rem; }
    .cartela-table td { background: #f3f4f6; border: 2px solid #e5e7eb; padding: 0.75rem; font-size: 1.1rem; font-weight: bold; transition: background 0.2s; text-align: center; }
    .cartela-table td.marked { background: #facc15; color: #1f2937; }
    .cartela-table td.free { background: #60a5fa; color: white; }
    .highlight-box { background: rgba(255,255,255,0.9); border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.2); padding: 1.5rem; margin-bottom: 1.5rem; }
  </style>
</head>
<body class="flex items-center justify-center min-h-screen">
  <div class="w-full max-w-5xl p-6">
    <h1 class="text-4xl font-bold text-center mb-6 text-white drop-shadow-lg"><%= playerName %></h1>

    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">Ãšltimo NÃºmero Sorteado</h2>
      <p id="lastNumber" class="text-5xl font-bold text-center text-red-600">--</p>
    </div>

    <div class="highlight-box">
      <h2 class="text-2xl font-semibold text-center text-gray-700">Ãšltimos 5 NÃºmeros Sorteados</h2>
      <p id="drawnNumbers" class="text-xl text-center text-gray-800">--</p>
    </div>

    <% cartelas.forEach((cartela, index) => { %>
      <div class="cartela-container">
        <h2 class="text-xl font-semibold mb-2 text-gray-700">Cartela <%= index + 1 %> (ID: <%= cartela.cartelaId %>)</h2>
        <div id="winnerMessage-<%= cartela.cartelaId %>" class="text-2xl font-bold text-center text-green-600 hidden mb-4">ðŸŽ‰ ParabÃ©ns! Esta cartela venceu!</div>
        <table class="cartela-table" id="table-<%= cartela.cartelaId %>">
          <thead>
            <tr>
              <th>B</th><th>I</th><th>N</th><th>G</th><th>O</th>
            </tr>
          </thead>
          <tbody>
            <% for (let row = 0; row < 5; row++) { %>
              <tr>
                <% for (let col = 0; col < 5; col++) { %>
                  <td class="<%= cartela.numbers[col][row] === 0 ? 'free' : '' %>">
                    <%= cartela.numbers[col][row] === 0 ? 'X' : cartela.numbers[col][row] %>
                  </td>
                <% } %>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    <% }) %>
  </div>

  <script>
    const cartelasData = <%- JSON.stringify(cartelas) %>;
    const initialWinners = <%- JSON.stringify(winners || []) %>;

    function getLetterNumber(n) {
      if (n >= 1 && n <= 15) return `B-${n}`;
      if (n <= 30) return `I-${n}`;
      if (n <= 45) return `N-${n}`;
      if (n <= 60) return `G-${n}`;
      if (n <= 75) return `O-${n}`;
      return n;
    }

    function paintTables(game, winners) {
      document.getElementById('lastNumber').textContent = game.lastNumber ? getLetterNumber(game.lastNumber) : '--';
      const lastFive = (game.drawnNumbers || []).slice(-5).reverse().map(getLetterNumber);
      document.getElementById('drawnNumbers').textContent = lastFive.length ? lastFive.join(', ') : '--';

      // ids das cartelas vencedoras
      const winnerIds = new Set((winners || []).map(w => w.cartelaId));

      cartelasData.forEach(cartela => {
        const table = document.getElementById(`table-${cartela.cartelaId}`);
        if (!table) return;

        const msg = document.getElementById(`winnerMessage-${cartela.cartelaId}`);
        if (msg) winnerIds.has(cartela.cartelaId) ? msg.classList.remove('hidden') : msg.classList.add('hidden');

        for (let r = 0; r < 5; r++) {
          for (let c = 0; c < 5; c++) {
            const num = cartela.numbers[c][r];
            const cell = table.rows[r + 1].cells[c];
            if (num === 0) { cell.className = 'free'; cell.textContent = 'X'; }
            else if ((game.drawnNumbers || []).includes(num)) { cell.className = 'marked'; cell.textContent = num; }
            else { cell.className = ''; cell.textContent = num; }
          }
        }
      });
    }

    // Inicial
    fetch('/game').then(r => r.json()).then(g => paintTables(g, initialWinners));

    // WebSocket (recebe winners completos e ordenados)
    const ws = new WebSocket((location.protocol === 'https:' ? 'wss://' : 'ws://') + window.location.host);
    ws.onmessage = e => {
      const data = JSON.parse(e.data);
      if (data.type === 'update') paintTables(data.game, data.winners || []);
    };
  </script>
</body>
</html>
