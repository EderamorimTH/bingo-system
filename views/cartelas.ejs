<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cartela de Bingo</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <a href="/registro">Registrar uma cartela</a>
  <h1>Cartela de <%= playerName %></h1>
  <div>
    <h2>Informações do Jogo</h2>
    <p>Prêmio Atual: <%= game.currentPrize || '--' %></p>
    <p>Informações Adicionais: <%= game.additionalInfo || '--' %></p>
    <p>Mensagem: <%= game.startMessage || '--' %></p>
  </div>
  <% cartelas.forEach(cartela => { %>
    <div>
      <h2>Cartela ID: <%= cartela.cartelaId %></h2>
      <table>
        <tr>
          <th>B</th><th>I</th><th>N</th><th>G</th><th>O</th>
        </tr>
        <% for (let row = 0; row < 5; row++) { %>
          <tr>
            <% for (let col = 0; col < 5; col++) { %>
              <td><%= cartela.numbers[col][row] === 0 ? 'Free' : cartela.numbers[col][row] %></td>
            <% } %>
          </tr>
        <% } %>
      </table>
    </div>
  <% }) %>
</body>
</html>
