<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cartelas - <%= playerName %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen p-6">

  <h1 class="text-3xl font-bold text-center mb-6">Cartelas de <%= playerName %></h1>
  <p class="text-center mb-6">Telefone: <%= phoneNumber || "Não informado" %></p>

  <!-- Último número sorteado -->
  <div class="text-center mb-4">
    <h2 class="text-xl font-semibold">Último Número Sorteado:</h2>
    <p id="lastNumber" class="text-2xl"><%= game.lastNumber || "--" %></p>
  </div>

  <!-- Prêmio Atual -->
  <div class="text-center mb-6">
    <h2 class="text-xl font-semibold">Prêmio Atual:</h2>
    <p id="currentPrize" class="text-2xl"><%= game.currentPrize || "Nenhum definido" %></p>
  </div>

  <!-- Cartelas do jogador -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% cartelas.forEach(c => { %>
      <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
        <h3 class="text-lg font-semibold mb-2">Cartela <%= c.cartelaId %></h3>
        <div class="grid grid-cols-5 gap-2">
          <% c.numeros.forEach(n => { %>
            <div 
              class="bg-gray-700 text-center py-2 rounded numero <%= game.drawnNumbers && game.drawnNumbers.includes(n) ? 'border-2 border-yellow-400 font-bold' : '' %>" 
              data-num="<%= n %>">
              <%= n %>
            </div>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Socket.IO para atualização em tempo real -->
  <script>
    const socket = io();

    socket.on("updateGame", (game) => {
      // Atualiza último número
      document.getElementById("lastNumber").textContent = game.lastNumber || "--";
      // Atualiza prêmio atual
      document.getElementById("currentPrize").textContent = game.currentPrize || "Nenhum definido";

      // Atualiza números da cartela
      document.querySelectorAll(".numero").forEach(el => {
        const num = parseInt(el.dataset.num);
        if (game.drawnNumbers.includes(num)) {
          el.classList.add("border-2", "border-yellow-400", "font-bold");
        } else {
          el.classList.remove("border-2", "border-yellow-400", "font-bold");
        }
      });
    });
  </script>

</body>
</html>
