<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cartelas</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    .winner-message {
      display: none;
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: #28a745;
      color: white;
      padding: 20px;
      font-size: 24px;
      font-weight: bold;
      border-radius: 10px;
      z-index: 1000;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="section">
      <h2>Ãšltimo NÃºmero Sorteado</h2>
      <p id="last-number"><%= lastNumber %></p>
    </div>
    
    <div class="section">
      <h2>PrÃªmio Atual</h2>
      <p id="current-prize"><%= currentPrize %></p>
    </div>
    
    <% cartelas.forEach(cartela => { %>
      <div class="section">
        <h3>Cartela <%= cartela.playerName %> (ID: <%= cartela.cartelaId %>)</h3>
        <% if (winners.some(w => w.cartelaId === cartela.cartelaId)) { %>
          <p class="winner">ðŸŽ‰ ParabÃ©ns! Esta cartela venceu!</p>
        <% } %>
        <table>
          <thead>
            <tr>
              <th>B</th>
              <th>I</th>
              <th>N</th>
              <th>G</th>
              <th>O</th>
            </tr>
          </thead>
          <tbody>
            <% cartela.numbers[0].forEach((_, row) => { %>
              <tr>
                <% cartela.numbers.forEach((column, col) => { %>
                  <td class="<%= cartela.markedNumbers.includes(column[row]) && column[row] !== 0 ? 'marked' : '' %>">
                    <%= column[row] === 0 ? 'FREE' : column[row] %>
                  </td>
                <% }) %>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% }) %>
    
    <div id="winner-message" class="winner-message"></div>
  </div>

  <script>
    const ws = new WebSocket('ws://' + window.location.host);
    ws.onmessage = function(event) {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        const game = data.game;
        document.getElementById('last-number').textContent = game.lastNumberDisplay || '--';
        document.getElementById('current-prize').textContent = game.currentPrize || '--';
        const winnerMessage = document.getElementById('winner-message');
        if (game.hasWinner) {
          winnerMessage.textContent = game.winnerMessage;
          winnerMessage.style.display = 'block';
        } else {
          winnerMessage.style.display = 'none';
        }
      }
    };
  </script>
</body>
</html>
