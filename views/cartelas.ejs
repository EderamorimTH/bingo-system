<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cartelas</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div id="prize">
    <h2>Prêmio Atual</h2>
    <p id="currentPrize"><%= game.currentPrize || '--' %></p>
  </div>

  <div id="info">
    <h2>Informações Adicionais</h2>
    <p id="additionalInfo"><%= game.additionalInfo || '--' %></p>
  </div>

  <% cartelas.forEach((cartela, index) => { %>
    <div class="cartela-container" data-cartela-id="<%= cartela.cartelaId %>">
      <h2>Cartela <%= index + 1 %> (ID: <%= cartela.cartelaId %>)</h2>
      <% if (winners.some(w => w.cartelaId === cartela.cartelaId)) { %>
        <p class="congrats">Parabéns! Esta cartela venceu!</p>
      <% } else { %>
        <p class="congrats" style="display: none;">Parabéns! Esta cartela venceu!</p>
      <% } %>
      <table>
        <thead>
          <tr>
            <th>B</th>
            <th>I</th>
            <th>N</th>
            <th>G</th>
            <th>O</th>
          </tr>
        </thead>
        <tbody>
          <% for(let row = 0; row < 5; row++) { %>
            <tr>
              <% for(let col = 0; col < 5; col++) { %>
                <% let number = cartela.numbers[col][row]; %>
                <td data-number="<%= number %>" class="<%= (number === 0 || game.drawnNumbers.includes(number)) ? 'marked' : '' %>">
                  <%= number === 0 ? 'LIVRE' : number %>
                </td>
              <% } %>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  <% }) %>

  <script>
    const ws = new WebSocket('ws://' + window.location.host);

    ws.onopen = () => {
      console.log('Conectado ao WebSocket');
    };

    ws.onmessage = (event) => {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        const game = data.game;
        const winners = data.winners || [];

        // Atualizar prêmio e informações adicionais
        document.getElementById('currentPrize').innerText = game.currentPrize || '--';
        document.getElementById('additionalInfo').innerText = game.additionalInfo || '--';

        // Atualizar marcações nas cartelas
        const drawnSet = new Set(game.drawnNumbers);
        document.querySelectorAll('.cartela-container').forEach(container => {
          const cartelaId = container.dataset.cartelaId;
          container.querySelectorAll('td').forEach(td => {
            const number = parseInt(td.dataset.number);
            if (!isNaN(number) && (number === 0 || drawnSet.has(number))) {
              td.classList.add('marked');
            } else if (number !== 0) {
              td.classList.remove('marked');
            }
          });

          // Atualizar mensagem de vencedor
          const congrats = container.querySelector('.congrats');
          if (winners.some(w => w.cartelaId === cartelaId)) {
            congrats.style.display = 'block';
          }
        });
      }
    };

    ws.onerror = (error) => {
      console.error('Erro no WebSocket:', error);
    };

    ws.onclose = () => {
      console.log('WebSocket desconectado');
    };
  </script>
</body>
</html>
