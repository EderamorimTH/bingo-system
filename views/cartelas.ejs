<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cartelas - <%= playerName %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white min-h-screen p-6">

  <h1 class="text-3xl font-bold text-center mb-6">Cartelas de <%= playerName %></h1>
  <p class="text-center mb-6">Telefone: <%= phoneNumber || "Não informado" %></p>

  <!-- Último número sorteado -->
  <div class="text-center mb-4">
    <h2 class="text-xl font-semibold">Último Número Sorteado:</h2>
    <p class="text-2xl"><%= game.lastNumber || "--" %></p>
  </div>

  <!-- Prêmio Atual -->
  <div class="text-center mb-6">
    <h2 class="text-xl font-semibold">Prêmio Atual:</h2>
    <p class="text-2xl"><%= game.currentPrize || "Nenhum definido" %></p>
  </div>

  <!-- Cartelas do jogador -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% cartelas.forEach(c => { %>
      <div class="bg-gray-800 p-4 rounded-lg shadow-lg">
        <h3 class="text-lg font-semibold mb-2">Cartela <%= c.cartelaId %></h3>
        <div class="grid grid-cols-5 gap-2">
          <% c.numeros.forEach(n => { %>
            <% if (game.drawnNumbers && game.drawnNumbers.includes(n)) { %>
              <!-- Número já sorteado (mantém cor original, só destaca com borda e negrito) -->
              <div class="bg-gray-700 text-center py-2 rounded border-2 border-yellow-400 font-bold"><%= n %></div>
            <% } else { %>
              <!-- Número ainda não sorteado (igual ao original) -->
              <div class="bg-gray-700 text-center py-2 rounded"><%= n %></div>
            <% } %>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>

</body>
</html>
