<!DOCTYPE html>
<html>
<head>
  <title>Cartelas</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div>
    <h2>Prêmio Atual</h2>
    <p id="prize-value"><%= game.currentPrize || '--' %></p>
  </div>

  <div>
    <h2>Informações Adicionais</h2>
    <p id="info-value"><%= game.additionalInfo || '--' %></p>
  </div>

  <% cartelas.forEach((cartela, index) => { %>
    <div class="cartela" id="cartela-<%= cartela.cartelaId %>">
      <h2>Cartela <%= index + 1 %> (ID: <%= cartela.cartelaId %>)</h2>
      <p class="winner-message" style="display: <%= winners.some(w => w.cartelaId === cartela.cartelaId) ? 'block' : 'none' %>">Parabéns! Esta cartela venceu!</p>
      <table>
        <thead>
          <tr>
            <th>B</th>
            <th>I</th>
            <th>N</th>
            <th>G</th>
            <th>O</th>
          </tr>
        </thead>
        <tbody>
          <% for (let row = 0; row < 5; row++) { %>
            <tr>
              <% for (let col = 0; col < 5; col++) { %>
                <% const num = cartela.numbers[col][row]; %>
                <% if (num === 0) { %>
                  <td class="free">FREE</td>
                <% } else { %>
                  <td data-num="<%= num %>" class="<%= game.drawnNumbers.includes(num) ? 'marked' : '' %>"><%= num %></td>
                <% } %>
              <% } %>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  <% }) %>

  <script>
    const ws = new WebSocket(`ws://${location.host}`);

    ws.onopen = () => {
      console.log('Conectado ao WebSocket');
    };

    ws.onmessage = (event) => {
      const data = JSON.parse(event.data);
      if (data.type === 'update') {
        // Atualizar prêmio
        document.getElementById('prize-value').innerText = data.game.currentPrize || '--';

        // Atualizar informações adicionais
        document.getElementById('info-value').innerText = data.game.additionalInfo || '--';

        // Marcar números nas cartelas
        const drawn = data.game.drawnNumbers;
        document.querySelectorAll('td[data-num]').forEach(td => {
          const num = parseInt(td.dataset.num);
          if (drawn.includes(num)) {
            td.classList.add('marked');
          } else {
            td.classList.remove('marked');
          }
        });

        // Mostrar mensagens de vencedor
        document.querySelectorAll('.cartela').forEach(cartelaDiv => {
          const cartelaId = cartelaDiv.id.replace('cartela-', '');
          const msg = cartelaDiv.querySelector('.winner-message');
          if (data.winners.some(w => w.cartelaId === cartelaId)) {
            msg.style.display = 'block';
          } else {
            msg.style.display = 'none';
          }
        });
      }
    };

    ws.onclose = () => {
      console.log('Desconectado do WebSocket');
    };
  </script>
</body>
</html>
